
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  OWNER
  STAFF
  SUPER__USER
}

enum GymStatus {
  ACTIVE
  INACTIVE
}

enum DiscountType {
  PERCENTAGE
  FLAT
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  username String   @unique
  name     String?
  password String
  role     UserRole @default(OWNER)

  gymId String?
  gym   Gym?    @relation(fields: [gymId], references: [id], onDelete: Cascade)

  feesCollected Fees[] @relation("FeesTakenBy")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Gym {
  id               String    @id @default(uuid())
  name             String
  address          String
  googleMapAddress String?
  status           GymStatus @default(ACTIVE)

  users   User[]
  members Member[]
  fees    Fees[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Member {
  id    String  @id @default(uuid())
  name  String
  phone String
  email String?

  joinDate DateTime @default(now())
  isActive Boolean  @default(true)

  gymId String
  gym   Gym    @relation(fields: [gymId], references: [id], onDelete: Cascade)

  fees Fees[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Fees {
  id             String @id @default(uuid())

  originalAmount Int
  amountPaid     Int

  discountType    DiscountType?
  discountApplied String?

  memberId String
  member   Member @relation(fields: [memberId], references: [id], onDelete: Cascade)

  gymId String
  gym   Gym    @relation(fields: [gymId], references: [id], onDelete: Cascade)

  type String

  takenById String
  takenBy   User @relation("FeesTakenBy", fields: [takenById], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

